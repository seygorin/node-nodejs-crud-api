{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API using in-memory database",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start:dev": "nodemon --exec \"node --env-file=.env --import ./register.js\" index.ts",
    "build": "webpack --mode=production",
    "start:prod": "npm run build && node --env-file=.env dist/bundle.js",
    "test": "jest"
  },
  "keywords": [
    "nodejs",
    "api",
    "crud"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
